<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kdao.college_recommend_android.RecommendActivity"
    android:background="@color/colorGreen">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/recommend_title"
        android:id="@+id/heading"
        android:textColor="@color/colorDarkOrange"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="Helvetica Neue"
        android:layout_gravity="left" />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorLightGreen"
        android:id="@+id/recommendList"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/heading"
        android:layout_gravity="center_horizontal"
        android:layout_weight="10" />
    <Button
        android:id="@+id/btn_back"
        android:background="@color/colorYellow"
        android:onClick="navigateToMainActivity"
        android:text="@string/back_button_text"
        android:textColor="@color/colorGreen"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:maxHeight="50dp"
        android:minHeight="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />
</RelativeLayout>

